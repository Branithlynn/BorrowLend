@model BorrowLend.ViewModel.ItemVM.CreateVM
@{
    ViewBag.Title = "ADD ITEM";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<center>
    <div class="container">

        <fieldset>
            <legend>Add </legend>
            <form action="/Items/Create" method="post">
                <div class="grid">

                    <div class="row">

                        <div class="col-1">
                            @Html.LabelFor(x => x.Name)
                        </div>

                        <div class="col-2">
                            @Html.TextBoxFor(x => x.Name,new { autocomplete = "off" })

                        </div>
                        <div class="col-2">
                            @Html.ValidationMessageFor(x=>x.Name)
                        </div>

                    </div>
                    

                    <div class="row">

                        <div class="col-1">
                            @Html.LabelFor(x => x.Borrower)
                        </div>

                        <div class="col-2">
                            @Html.TextBoxFor(x => x.Borrower,new { autocomplete = "off" })

                        </div>
                        <div class="col-2">
                            @Html.ValidationMessageFor(x=>x.Borrower)
                        </div>

                    </div>
                    <div class="row">

                        <div class="col-1">
                            @Html.LabelFor(x => x.Lender)
                        </div>

                        <div class="col-2">
                            @Html.TextBoxFor(x => x.Lender,new { autocomplete = "off" })

                        </div>
                        <div class="col-2">
                            @Html.ValidationMessageFor(x=>x.Lender)
                        </div>

                    </div>
                    
                    <div class="row">
                        <div class="col-3">
                            <div class="right">
                                <a href=/Items/Index>Back</a>
                                <input type="submit" value="create" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </fieldset>
    </div>
</center>